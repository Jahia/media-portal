<?xml version="1.0" encoding="UTF-8"?>
<content xmlns:j="http://www.jahia.org/jahia/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0">
    <modules jcr:primaryType="jnt:modules">
        <mediaportal j:dependencies="bootstrap3-components default tags"
                   j:modulePriority="0"
                   j:moduleType="module"
                   j:title="mediaportal"
                   jcr:primaryType="jnt:module">
                
                <portlets jcr:primaryType="jnt:portletFolder"/>
                <files jcr:primaryType="jnt:folder"/>
                <contents jcr:primaryType="jnt:contentFolder"/>
                <templates j:rootTemplatePath="/base" jcr:primaryType="jnt:templatesFolder">
                    <files jcr:primaryType="jnt:folder"/>
                    <contents jcr:primaryType="jnt:contentFolder"/>
                    <image-temp j:applyOn="jmix:image"
                        j:defaultTemplate="false"
                        j:hiddenTemplate="false"
                        jcr:primaryType="jnt:contentTemplate">
                        <j:translation_en jcr:language="en"
                                 jcr:mixinTypes="mix:title"
                                 jcr:primaryType="jnt:translation"
                                 jcr:title="Image Template"/>
                        <pagecontent jcr:primaryType="jnt:contentList">
                            <section--container--row--grid columnsType="predefinedColumns"
                                                 grid="9_3"
                                                 jcr:mixinTypes="bootstrap3mix:predefinedColumns"
                                                 jcr:primaryType="bootstrap3nt:columns">
                                <section--container--row--grid-main jcr:primaryType="jnt:contentList">
                                    <main-resource-display j:mainResourceView="responsive"
                                               jcr:primaryType="jnt:mainResourceDisplay"/>
                                    <relatedbytag j:nbOfResult="8"
                                      j:type="jmix:image"
                                      jcr:primaryType="jnt:relatedByTag"
                                      tagSource="bound"/>
                                </section--container--row--grid-main>
                                <section--container--row--grid-side jcr:primaryType="jnt:contentList">
                                    <main-resource-display-1 j:mainResourceView="downloadButton"
                                                 jcr:primaryType="jnt:mainResourceDisplay"/>
                                    <main-resource-display j:mainResourceView="metadata" jcr:primaryType="jnt:mainResourceDisplay"/>
                                    <display-tags j:view="mediaportal"
                                      jcr:mixinTypes="jmix:renderable"
                                      jcr:primaryType="jnt:displayTags"/>
                                    <add-tag j:view="mediaPortal"
                                 jcr:mixinTypes="jmix:renderable"
                                 jcr:primaryType="jnt:tagging"/>
                                    <main-resource-display-2 j:mainResourceView="backButton"
                                                 jcr:primaryType="jnt:mainResourceDisplay"/>
                                </section--container--row--grid-side>
                            </section--container--row--grid>
                        </pagecontent>
                    </image-temp>
                </templates>
                
            </mediaportal>
    </modules>
</content>